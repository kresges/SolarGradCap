<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fan On/Off"
        android:id="@+id/fanButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:layout_alignRight="@+id/phoneButton"
        android:layout_alignEnd="@+id/phoneButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED Pattern 1"
        android:id="@+id/ledButton1"
        android:layout_below="@+id/fanButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/fanButton"
        android:layout_alignEnd="@+id/fanButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED Pattern 2"
        android:id="@+id/ledButton2"
        android:layout_below="@+id/ledButton1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/ledButton1"
        android:layout_alignEnd="@+id/ledButton1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED Pattern 3"
        android:id="@+id/ledButton3"
        android:layout_below="@+id/ledButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/phoneButton"
        android:layout_alignEnd="@+id/phoneButton" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Charging On/Off"
        android:id="@+id/phoneButton"
        android:layout_below="@+id/ledButton3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />


</RelativeLayout>
